<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Quicksell</title>
  <link href="/css/preview.css" rel="stylesheet">
  <!-- Latest compiled and minified CSS -->
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">

  <!-- jQuery library -->
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>

  <!-- Latest compiled JavaScript -->
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
  <script src="https://kit.fontawesome.com/0b253fb25d.js" crossorigin="anonymous"></script>

  <script src="/js/jquery-1.11.0.js"></script>
  <script src="/js/library.js"></script>
  <script src="/js/preview.js"></script>

  <script src="/js/bootstrap.js"></script>
  <link href="/css/bootstrap.css" rel="stylesheet">
  <link href="/css/bootstrap-theme.css" rel="stylesheet">

</head>

<body>
  <div class="header">
    <div class="header-content header-left" style="font-size: 13px;" onclick="location.href='/form/{{templateId}}'">
      <button class="back-button"></button>
      Back to edit
    </div>
    <div><b>Preview</b></div>
    <div class="header-content header-right" style="font-size: 13px;" onclick="location.href='/share'">
      Save & Share
      <button class="back-button" style="transform: rotate(180deg);"></button>
    </div>
  </div>

  <main class="preview-content">
    <div style="background-color: white;">
      <!--Funiture pictures-->
      <div class="img-container">
        <a class="prev" onclick="addnum(-1)">&#10094;</a>
        <a class="next" onclick="addnum(1)">&#10095;</a>
        <br />

        {{#each templates}}
        <div class="tempic set">
          <img src="/images/{{image}}" class="img">
        </div>
        {{/each}}
      </div>

      <!--Funiture Information: Leather High-Back Chair-->
        <h1 style="font-size: 20px;">{{formData.[0].value}}</h1>
        <h2 style="color: #745452;">{{formData.[1].value}}</h2>
        <div class="dimensions">
          <!--22in-->
          <!--<input value="{{formData.[0].value}}"></input>-->
          <div>Length: &nbsp;&nbsp;{{formData.[3].value}} {{formData.[2].value}}</div>
          <div>Width: &nbsp;&nbsp;{{formData.[4].value}} {{formData.[2].value}}</div>
          <div>Height: &nbsp;&nbsp;{{formData.[5].value}} {{formData.[2].value}}</div>
          <br />
          <div>Condition: &nbsp;&nbsp;{{formData.[6].value}}</div>
        </div>
        <p class="info" id="description">{{formData.[7].value}}</p>

      <!--Contact Information-->
      <div class="contact">
        <div style="color: #745452;">Contact</div>
        <div style="font-size: 18px;">{{formData.[8].value}}: {{formData.[9].value}}</div>
        <div style="color: #745452;">for more information</div>
      </div>

    </div>
  </main>

  <script>
    var picnum = 1;
    picshw(picnum);
  </script>
</body>

</html>