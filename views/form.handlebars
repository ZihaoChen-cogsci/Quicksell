<body>
	<main>
		{{!-- another method: onclick="history.back()" --}}
		<div class="header">
			<div class="header-content header-left" style="font-size: 13px;" onclick="location.href='./library'">
				<button class="back-button"></button>
				Cancel
			</div>
			<div><b>New Product Form</b></div>
		</div>
		<form>
			<!--Product Information-->
			<br />
			<div class="divider">
				<div class="line"></div>
				<b>Product Info</b>
				<div class="line"></div>
			</div>
			<div class="input-field">
				<label for="name" class="input-label">Product Name</label>
				<input class="input" type="text" id="name" name="name" value="Mike">
			</div>
			<div class="input-field">
				<label for="price" class="input-label">Price</label>
				<!--placeholder="eg. $20"-->
				<input class="input" type="text" id="price" name="price" value="$20">
			</div>
			<div class="input-field">
				<label for="condition" class="input-label">Condition</label>
				<select class="input" id="condition" name="condition" value="new">
					<option value="new">New</option>
					<option value="like new">Like New</option>
					<option value="good">Good</option>
					<option value="fair">Fair</option>
					<option value="poor">Poor</option>
				</select>
			</div>

			<div class="dashed-divider"></div>

			<!--dimensions-->
			<div class="input-field">
				<label for="dimension" class="input-label">Dimension</label>
				<select id="dimension" class="input" id="dimension" name="dimension" value="CM">
					<option value="cm">centimenter (CM)</option>
					<option value="m">meter (M)</option>
					<option value="inch">inch (IN)</option>
					<option value="foot">foot (FT)</option>
				</select>
			</div>
			<div class="input-field">
				<label for="length" class="input-label">Length</label>
				<input class="input" type="text" id="length" name="length" value="20">
			</div>
			<div class="input-field">
				<label for="width" class="input-label">Width</label>
				<input class="input" type="text" id="width" name="width" value="40">
			</div>
			<div class="input-field">
				<label for="height" class="input-label">Height</label>
				<input class="input" type="text" id="height" name="height" value="30">
			</div>

			<!-- buttons -->
			<input id="file" multiple name="image" type="file" accept="image/gif, image/jpeg, image/png, image/jpg"
				style="display:none;">
			<label for="file" class="button" id="picture" onclick="UploadPicture()">Upload Picture</label>
			<div class="hint">Select up to <b>5 photos</b> from multiple angles to better present your product.</div>
			<input class="button" id="diagram" type="submit" value="Create 2D Diagram" onclick="alert('Itâ€™s still in the process of making or deleting according to future working hours')">
			<div class="hint">Select a 2D Diagram that best matches your product so we can help you visualize the
				dimensions.</div>

			<div class="gallery"></div>
			<div class="dashed-divider"></div>

			<!-- description -->
			<textarea rows="8" class="input-field"
				placeholder="Please enter additional information if needed."></textarea>

			<!--Contact Information-->
			<br />
			<div class="divider">
				<div class="line"></div>
				<b>Contact Info</b>
				<div class="line"></div>
			</div>

			<div class="contact-container">
				<div class="input-field" style="width: 39%;">
					<label for="contact-methods" class="input-label" style="font-size: 12px;">Contact Method</label>
					<select class="input" id="contact-methods" name="contact-methods" value="phone"
						style="font-size: 14px;">
						<option value="phone">Cell Phone</option>
						<option value="email">Email</option>
						<option value="wechat">WeChat</option>
						<option value="facebook">Facebook</option>
					</select>
				</div>
				<div class="input-field" style="width: 60%;">
					{{!-- <label for="contact" class="input-label"></label> --}}
					<input class="input" type="text" id="contact" name="contact"
						value ="(555) 555-5555">
				</div>
			</div>

			{{!-- <div class="btn-container">
				<input class="button short-button" id="save" type="submit" value="Save for later">
				<input class="button short-button" id="preview" type="submit" value="Preview">
			</div> --}}
		</form>

		<!-- Bottom Buttons-->
		<div class="btn-container">
			<div><button class="button bottom_btn" id="save" type="submit" value="Save for later"
			onclick="alert('Saved Successfully')">Save for later</button>
			</div>
			<div><button class="button bottom_btn" id="preview" type="submit" value="Preview"
					onclick="location.href='./preview'">Preview</button></div>
		</div>
	</main>
</body>

</html>